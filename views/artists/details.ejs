
<div class="container">

    <h1 class="center">Artist Profile</h1>

    <h4 class="center"><%= artist.name %> </h4>

    <div class="center">
        <% for( let i = 0; i < artist['images'].length; i++ ) { %>
            <img src="<%=artist['images'][i].uri%>" width=150px alt="artist image"> 
            <% } %>
    </div>
    
    <div class="center">

        <p><%= artist.profile %> </p>
        
        <a href="/results/<%=artist.id%>"><button type="button" class="btn btn-primary">See Albums</button></a>
    </div>

</div>