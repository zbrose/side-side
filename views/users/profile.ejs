<h2><%=user.email %>'s Collection</h2>

<% faves.forEach(fave => { %>
    <div>
        <h3><%= fave.title %> by <%= fave.artist %> </h3> 
        <img src=" <%= fave.img_url %>" width="250" alt=" <%=fave.title %> image">

        <form action="/albums/<%=fave.id%>?_method=DELETE" method="POST">
            <input type="submit" class="btn btn-danger" value="Remove From Collection" />
        </form>
        
        <form method="post" action="/categories/albums">
           
            <input hidden type="text" id="categorize" value="<%=fave.id%>" name="category">
            <button type="submit">Add To Category: </button> 
            <!-- <label for="categories">Add to category:</label> -->
            <select name="category" id="categories">
                <% categories.forEach(category => { %>
                        <option value="<%=category.id%>"><%=category.name %> </option>
                <% }) %>
            </select>

        </form>
        <!-- <a href="/albums/<%=//fave.id %> "><button>Album Details</button></a> -->
    </div>
<% }) %>

