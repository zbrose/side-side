<h2><%=user.email %>'s Collection</h2>

<% faves.forEach(fave => { %>
    <div>
       <h3><%= fave.title %> by <%= fave.artist %> </h3> 
        <img src=" <%= fave.img_url %>" width="250" alt=" <%=fave.title %> image">
        <form action="/albums/<%=fave.id%>?_method=DELETE" method="POST">
            <input type="submit" class="btn btn-danger" value="Remove From Collection" />
        </form>
        <form method="GET" action="/categories">
            <input type="text" id="categorize" placeholder="add to category" name="">
            <input type="submit">
        </form>
        <a href="/albums/<%=fave.id %> "><button>Album Details</button></a>
    </div>
<% }) %>