<h3>All Categories</h3>

<div>
    <a href="/categories/new"><button>Create New Category</button></a>
</div>

<% categories.forEach(category => { %>
            <a href="/categories/<%=category.id%>"> <h3><%= category.name %> </h3> </a>
            <p><%= category.description %> </p>
            <a href="/categories/edit/<%=category.id%>"><button>Edit Category</button></a>
            <form action="/categories/<%=category.id%>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger" value="Delete Category" />
            </form>
<% }) %>

